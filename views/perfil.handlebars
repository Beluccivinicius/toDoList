<body>
    <div id="background">
    <a href="/atividades" id="btnClose">
        <img src="./images/botaovoltar.svg">
    </a>
    <div class="hover">
    <button id="btnPhotoProfile">
        <span id="changePhoto"></span>
        <img id="imgProfile" src="/users/{{img}}" width="198px" height="198px">
    </button>
    </div>
    <h3>Perfil</h3>
    <form>
        <label id="infosProfile">Nome</label>
        <input type="text" name="{{nome}}" id="nome" placeholder="Ex: Jhon Doe">
        <i class="fa-regular fa-pen-to-square fa-xl" onclick="unlockForms(nome)"></i>
    <hr>
        <label id="infosProfile">Email</label>
        <input type="text" name="{{email}}" value="{{email}}" id="email" placeholder="email@gmail.com">
        <i class="fa-regular fa-pen-to-square fa-xl" onclick="unlockForms(email)"></i>
    <hr>
        <label id="infosProfile">Código verificação</label>
        <input type="text" name="{{codigo}}" id="codigo" placeholder="Ex: Xy789dv">
        <i class="fa-regular fa-pen-to-square fa-xl" onclick="unlockForms(codigo)"></i>
    <div>
            <input type="submit" class="button" value="Atualizar" id="posted">
    </div>
    </form>
        <a href="perfil/trocar/senha" id="changePassword">Trocar minha senha</a>
    </div>
    <dialog id="uploadPhoto">
        <div type="button" class="close" id="exclusion">
            <img id="close" src="./images/botaomenos.svg" alt="fechar modal" onmouseover="buttonX()" onmouseout="buttonMenos()">
        </div>
        <div id="formsPhoto">
            <button id="btnPhotoProfile">
                <img id="imgChangePhoto" src="./users/{{img}}" width="198px" height="198px">
            </button>
            <label for="choosePhoto" id="escolherArquivo">Escolher arquivos</label>
            <input type="file" id="choosePhoto" name="choosePhoto">
            <input class="button" type="submit" id="trocar" value="Trocar" type="submit">
        </div>
    </dialog>
    <dialog id="updatePassword">

    </dialog>
</body>
